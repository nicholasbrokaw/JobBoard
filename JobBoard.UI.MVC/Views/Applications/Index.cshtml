@model IEnumerable<JobBoard.DATA.EF.Application>
@using JobBoard.DATA.EF

@{
	ViewBag.Title = "Index";

	JobBoardEntities db = new JobBoardEntities();
}

<table class="table">
	<tr>
		<th>
			@Html.DisplayNameFor(model => model.ApplicationDate)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.OpenPosition.Position.Title)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.OpenPosition.Location.Summary)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.ApplicationStatus.StatusName)
		</th>
		@if (!User.IsInRole("Employee"))
		{
			<th>
				@Html.DisplayNameFor(model => model.UserDetail.FullName)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.ManagerNotes)
			</th>
		}
		<th></th>
	</tr>

	@foreach (var item in Model)
	{
	<tr>
		<td>
			@Html.DisplayFor(modelItem => item.ApplicationDate)
		</td>
		<td>
			@Html.DisplayFor(modelItem => item.OpenPosition.Position.Title)
		</td>
		<td>
			@Html.DisplayFor(modelItem => item.OpenPosition.Location.Summary)
		</td>
		<td>
			@Html.DisplayFor(modelItem => item.ApplicationStatus.StatusName)
		</td>
		@if (!User.IsInRole("Employee"))
		{
			<td>
				@Html.DisplayFor(modelItem => item.UserDetail.FullName)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.ManagerNotes)
			</td>
		}
		<td>
			@if (item.ApplicationStatusId == db.ApplicationStatuses.Where(s => s.StatusName.ToLower() == "pending").Select(s => s.ApplicationStatusId).Single() && User.IsInRole("Manager"))
			{
				@Html.ActionLink("Edit", "Edit", new { id = item.ApplicationId }) <span>|</span>
			}
			@Html.ActionLink("Details", "Details", new { id = item.ApplicationId })
		</td>
	</tr>
	}

</table>
